# ========================
# CONFIGURACIÓN DEL SISTEMA
# ========================
APP_ENV=development  # development|staging|production
APP_SECRET_KEY=generar_con_openssl_rand_hex_32
APP_PORT=8000
APP_DEBUG=True  # False en producción
NODE_ENV=production

# ========================
# CONFIGURACIÓN VEHICULAR
# ========================
CAN_INTERFACE=vcan0
OBD_PROTOCOL=auto  # auto|j1939|iso15765
MAX_CAN_FREQUENCY=1000  # Hz
VEHICLE_DIAG_TIMEOUT=5000  # ms

# ========================
# AUTENTICACIÓN Y SEGURIDAD
# ========================
JWT_SECRET=tu_clave_secreta_HS512_de_64_bytes
JWT_ALGORITHM=HS512
JWT_EXPIRE_MINUTES=1440
JWT_REFRESH_EXPIRE_DAYS=30
CRYPTO_PEPPER=usar_valor_único_por_instalación

# ========================
# BASE DE DATOS
# ========================
# PostgreSQL (Datos Maestros)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mechbot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=contraseña_segura

# Cassandra (Telemetría)
CASSANDRA_HOSTS=cassandra1:9042,cassandra2:9042
CASSANDRA_KEYSPACE=mechbot_telemetry
CASSANDRA_USER=cassandra
CASSANDRA_PASSWORD=contraseña_segura
CASSANDRA_REPLICATION=3

# Redis (Caché)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_CACHE_TTL=3600

# ========================
# MENSAJERÍA Y EVENTOS
# ========================
KAFKA_BOOTSTRAP_SERVERS=kafka1:9092,kafka2:9092
KAFKA_TELEMETRY_TOPIC=vehicle_telemetry
KAFKA_DIAGNOSIS_TOPIC=diagnosis_requests
KAFKA_CONSUMER_GROUP=mechbot-core

# ========================
# MODELOS DE IA/ML
# ========================
ML_MODELS_PATH=/models/onnx
ML_MODELS_BUCKET=mechbot-ml-models
XGBOOST_MODEL_VERSION=v3.2.1
BERT_MODEL_VERSION=multi-lang-v2
YOLO_MODEL_VERSION=v8-small

# ========================
# INTEGRACIONES EXTERNAS
# ========================
# Salesforce
SALESFORCE_API_URL=https://yourinstance.salesforce.com
SALESFORCE_CLIENT_ID=tu_client_id
SALESFORCE_CLIENT_SECRET=tu_client_secret

# Google Maps
GOOGLE_MAPS_API_KEY=tu_api_key_de_google_maps

# Realidad Aumentada
AR_ASSETS_BASE_URL=https://cdn.mechbot.io/3d-models
AR_GUIDES_VERSION=v2.1.0

# ========================
# MONITOREO Y OBSERVABILIDAD
# ========================
SENTRY_DSN=https://tu_dsn@sentry.io/123456
PROMETHEUS_PORT=9090
GRAFANA_DASHBOARD_URL=http://grafana:3000

# En .env.monitoring
PROMETHEUS_RETENTION=30d
PROMETHEUS_STORAGE=50Gi
PROMETHEUS_SHARDS=4

# ========================
# CONFIGURACIÓN AVANZADA
# ========================
# Kubernetes
K8S_CLUSTER_NAME=mechbot-prod
K8S_NAMESPACE=mechbot

# Helm
HELM_RELEASE_NAME=mechbot-core
HELM_CHART_VERSION=2.0.1

# Docker
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_PREFIX=mechmind-dwv
